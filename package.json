{
  "name": "tinysaver",
  "type": "module",
  "version": "0.1.0",
  "packageManager": "pnpm@10.28.0",
  "description": "Modern replacement of file-saver.js.",
  "keywords": [
    "download",
    "file",
    "file-saver",
    "save-as"
  ],
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com"
  },
  "homepage": "https://github.com/ntnyq/tinysaver#readme",
  "repository": "ntnyq/tinysaver",
  "bugs": {
    "url": "https://github.com/ntnyq/tinysaver/issues"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "lint": "eslint",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build",
    "release": "run-s release:check release:version",
    "release:check": "run-s lint typecheck test",
    "release:check:full": "run-s lint typecheck test test:e2e",
    "release:version": "bumpp",
    "test": "vitest",
    "test:e2e": "vitest --config vitest.config.e2e.ts",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^5.9.0",
    "@ntnyq/prettier-config": "^3.0.1",
    "@ntnyq/tsconfig": "^3.1.0",
    "@ntnyq/utils": "^0.11.0",
    "@vitest/browser": "^4.0.17",
    "@vitest/browser-playwright": "^4.0.17",
    "bumpp": "^10.3.2",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "nano-staged": "^0.9.0",
    "npm-run-all2": "^8.0.4",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "tsdown": "^0.19.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "nano-staged": {
    "*.{js,ts,mjs,cjs,md,yml,yaml,toml,json}": "eslint --fix"
  }
}
