{
  "name": "tinysaver",
  "type": "module",
  "version": "0.0.0",
  "packageManager": "pnpm@10.12.4",
  "description": "Modern replacement of file-saver.js.",
  "keywords": [
    "download",
    "file",
    "file-saver",
    "save-as"
  ],
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com"
  },
  "homepage": "https://github.com/ntnyq/tinysaver#readme",
  "repository": "ntnyq/tinysaver",
  "bugs": {
    "url": "https://github.com/ntnyq/tinysaver/issues"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "lint": "eslint",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build",
    "release": "run-s release:check release:version release:publish",
    "release:check": "run-s lint typecheck test",
    "release:publish": "pnpm publish",
    "release:version": "bumpp",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^5.0.0",
    "@ntnyq/prettier-config": "^3.0.1",
    "@ntnyq/utils": "^0.8.0",
    "@types/node": "^24.0.12",
    "bumpp": "^10.2.0",
    "eslint": "^9.30.1",
    "husky": "^9.1.7",
    "nano-staged": "^0.8.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.6.2",
    "tsdown": "^0.12.9",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "nano-staged": {
    "*.{js,ts,mjs,cjs,md,yml,yaml,toml,json}": "eslint --fix"
  }
}
